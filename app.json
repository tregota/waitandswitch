{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "se.tregota.waitandswitch",
  "version": "0.10.2",
  "compatibility": ">=8.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Wait and Switch"
  },
  "brandColor": "#0abfa2",
  "description": {
    "en": "Switching on or off with a delay"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png"
  },
  "author": {
    "name": "Henrik Berg",
    "email": "dev@tregota.se"
  },
  "bugs": {
    "url": "https://github.com/tregota/waitandswitch/issues"
  },
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Delay started"
        },
        "titleFormatted": {
          "en": "[[id]]delay started"
        },
        "args": [
          {
            "title": {
              "en": "ID"
            },
            "type": "autocomplete",
            "name": "id",
            "placeholder": {
              "en": "Enter existing delay ID"
            }
          }
        ],
        "tokens": [
          {
            "type": "boolean",
            "name": "wantedState",
            "title": {
              "en": "State"
            }
          },
          {
            "type": "number",
            "name": "seconds",
            "title": {
              "en": "Seconds"
            }
          }
        ],
        "id": "waitandswitch-delaystart"
      },
      {
        "title": {
          "en": "State changed"
        },
        "titleFormatted": {
          "en": "[[id]]state changed"
        },
        "args": [
          {
            "title": {
              "en": "ID"
            },
            "type": "autocomplete",
            "name": "id",
            "placeholder": {
              "en": "Enter existing delay ID"
            }
          }
        ],
        "tokens": [
          {
            "type": "boolean",
            "name": "state",
            "title": {
              "en": "State"
            }
          }
        ],
        "id": "waitandswitch-statechange"
      }
    ],
    "conditions": [
      {
        "title": {
          "en": "Delay true"
        },
        "titleFormatted": {
          "en": "Delay!{{ |not }}true[[seconds]]sec,[[id]]"
        },
        "hint": {
          "en": "For standard flows. Should be placed after all other conditions. With the exception that it should also be followed by an \"Or\" card with same ID below the \"or\" line."
        },
        "args": [
          {
            "title": {
              "en": "Seconds"
            },
            "type": "number",
            "name": "seconds",
            "placeholder": {
              "en": "0-89"
            },
            "min": 0,
            "max": 89,
            "step": 0.001
          },
          {
            "title": {
              "en": "ID"
            },
            "type": "autocomplete",
            "name": "id",
            "placeholder": {
              "en": "Enter delay ID"
            }
          }
        ],
        "id": "waitandswitch-delay"
      },
      {
        "title": {
          "en": "Or delay false"
        },
        "titleFormatted": {
          "en": "Or delay!{{ |not }}false[[seconds]]sec,[[id]]"
        },
        "hint": {
          "en": "For standard flows. Should be placed alone below the \"or\" line. Cancels \"Delay true\" or delays false if state is true."
        },
        "args": [
          {
            "title": {
              "en": "Seconds"
            },
            "type": "number",
            "name": "seconds",
            "placeholder": {
              "en": "0-89"
            },
            "min": 0,
            "max": 89,
            "step": 0.001
          },
          {
            "title": {
              "en": "ID"
            },
            "type": "autocomplete",
            "name": "id",
            "placeholder": {
              "en": "Enter delay ID"
            }
          }
        ],
        "id": "waitandswitch-ordelay"
      },
      {
        "title": {
          "en": "Or !{{cancel|inverted cancel}}"
        },
        "titleFormatted": {
          "en": "Or !{{cancel|inverted cancel}}[[id]]"
        },
        "hint": {
          "en": "For standard flows. Should be placed alone below the \"or\" line. Cancels \"Delay true\" or returns false if state is true."
        },
        "args": [
          {
            "title": {
              "en": "ID"
            },
            "type": "autocomplete",
            "name": "id",
            "placeholder": {
              "en": "Enter existing delay ID"
            }
          }
        ],
        "id": "waitandswitch-orcancel"
      },
      {
        "title": {
          "en": "Is delayed"
        },
        "titleFormatted": {
          "en": "[[id]]is delayed"
        },
        "args": [
          {
            "title": {
              "en": "ID"
            },
            "type": "autocomplete",
            "name": "id",
            "placeholder": {
              "en": "Enter existing delay ID"
            }
          }
        ],
        "id": "waitandswitch-isdelayed"
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Delay Yes/No"
        },
        "titleFormatted": {
          "en": "Delay[[yesno]][[seconds]]sec,[[id]]"
        },
        "hint": {
          "en": "Delays Yes/No unless interrupted by an opposing card with the same ID."
        },
        "args": [
          {
            "title": {
              "en": "Yes/No"
            },
            "type": "checkbox",
            "name": "yesno"
          },
          {
            "title": "Seconds",
            "type": "number",
            "name": "seconds",
            "placeholder": {
              "en": "0-89"
            },
            "min": 0,
            "max": 89,
            "step": 0.001
          },
          {
            "title": {
              "en": "ID"
            },
            "type": "autocomplete",
            "name": "id",
            "placeholder": {
              "en": "Enter delay ID"
            }
          }
        ],
        "tokens": [
          {
            "type": "boolean",
            "name": "delaystate",
            "title": {
              "en": "State"
            }
          }
        ],
        "id": "waitandswitch-advanceddelay"
      },
      {
        "title": {
          "en": "Cancel"
        },
        "titleFormatted": {
          "en": "Cancel[[id]]"
        },
        "hint": {
          "en": "Cancels existing delay with the same ID or unsets state."
        },
        "args": [
          {
            "title": {
              "en": "ID"
            },
            "type": "autocomplete",
            "name": "id",
            "placeholder": {
              "en": "Enter existing delay ID"
            }
          }
        ],
        "id": "waitandswitch-cancel"
      }
    ]
  }
}